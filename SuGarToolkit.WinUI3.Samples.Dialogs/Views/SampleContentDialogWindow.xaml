<?xml version="1.0" encoding="utf-8" ?>
<dialogs:ContentDialogWindow
    x:Class="SuGarToolkit.WinUI3.Samples.Dialogs.Views.SampleContentDialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="using:SuGarToolkit.WinUI3.Controls.Dialogs"
    xmlns:local="using:SuGarToolkit.WinUI3.Samples.Dialogs.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    CloseButtonClick="ContentDialogWindow_CloseButtonClick"
    Header="SampleContentDialogWindow"
    PrimaryButtonClick="ContentDialogWindow_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialogWindow_SecondaryButtonClick"
    mc:Ignorable="d">

    <dialogs:ContentDialogWindow.SystemBackdrop>
        <MicaBackdrop />
    </dialogs:ContentDialogWindow.SystemBackdrop>

    <StackPanel>
        <CheckBox Content="Sample" />
        <CheckBox Content="ContentDialog" />
        <CheckBox Content="Window" />
    </StackPanel>

</dialogs:ContentDialogWindow>
