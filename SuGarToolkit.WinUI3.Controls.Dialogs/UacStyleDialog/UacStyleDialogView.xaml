<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SuGarToolkit.WinUI3.Controls.Dialogs">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SuGarToolkit.WinUI3.Controls.Dialogs/UacStyleDialog/UacStyleDialogView_themeresources.xaml" />
        <ResourceDictionary Source="/SuGarToolkit.WinUI3.Controls.Dialogs/ExtendedContentDialog/ExtendedContentDialogView.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource ExtendedContentDialogViewDefaultStyle}" TargetType="local:UacStyleDialogView" />

    <Style
        x:Key="UacStyleDialogViewErrorSeverityStyle"
        BasedOn="{StaticResource ExtendedContentDialogViewDefaultStyle}"
        TargetType="local:ExtendedContentDialogView">
        <Setter Property="ExtendedHeaderBackground" Value="{ThemeResource UacStyleDialogErrorSeverityHeaderBackgroundBrush}" />
    </Style>

    <Style
        x:Key="UacStyleDialogViewWarningSeverityStyle"
        BasedOn="{StaticResource ExtendedContentDialogViewDefaultStyle}"
        TargetType="local:ExtendedContentDialogView">
        <Setter Property="ExtendedHeaderBackground" Value="{ThemeResource UacStyleDialogWarningSeverityHeaderBackgroundBrush}" />
    </Style>

    <Style
        x:Key="UacStyleDialogViewSuccessSeverityStyle"
        BasedOn="{StaticResource ExtendedContentDialogViewDefaultStyle}"
        TargetType="local:ExtendedContentDialogView">
        <Setter Property="ExtendedHeaderBackground" Value="{ThemeResource UacStyleDialogSuccessSeverityHeaderBackgroundBrush}" />
    </Style>

    <Style
        x:Key="UacStyleDialogViewInformationalSeverityStyle"
        BasedOn="{StaticResource ExtendedContentDialogViewDefaultStyle}"
        TargetType="local:ExtendedContentDialogView">
        <Setter Property="ExtendedHeaderBackground" Value="{ThemeResource UacStyleDialogInformationalSeverityHeaderBackgroundBrush}" />
    </Style>

</ResourceDictionary>
