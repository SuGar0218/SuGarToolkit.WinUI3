<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="SuGarToolkit.WinUI3.GalleryApp.Views.TestPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:SuGarDialogs="using:SuGarToolkit.WinUI3.Controls.Dialogs"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:layout="using:SuGarToolkit.WinUI3.Layout"
	xmlns:local="using:SuGarToolkit.WinUI3.GalleryApp.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<ScrollViewer>
		<StackPanel>
			<TextBox x:Name="TestTextBox" VerticalAlignment="Top" />
			<layout:TextBlock
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Text="MAXIMIZEBOX" />
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
				</Grid.ColumnDefinitions>
				<Expander
					Grid.Column="0"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Top"
					Header="IsTextScaleFactorEnabled=False">
					<StackPanel x:Name="PART_DisableTextScaleFactorStackPanel" />
				</Expander>
				<Expander
					Grid.Column="1"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Top"
					Header="IsTextScaleFactorEnabled=True">
					<StackPanel x:Name="PART_EnableTextScaleFactorStackPanel" />
				</Expander>
			</Grid>
			<CheckBox>
				<layout:TextBlock Text="MAXIMIZEBOX" />
			</CheckBox>
		</StackPanel>
	</ScrollViewer>

</Page>
