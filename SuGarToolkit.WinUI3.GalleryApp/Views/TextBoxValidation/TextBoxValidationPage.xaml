<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="SuGarToolkit.WinUI3.GalleryApp.Views.TextBoxValidationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SuGarToolkit.WinUI3.GalleryApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:validation="using:SuGarToolkit.WinUI3.Controls.Validations"
    xmlns:vm="using:SuGarToolkit.WinUI3.GalleryApp.ViewModels"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="Expander">
            <Setter Property="ExpandDirection" Value="Down" />
            <Setter Property="IsExpanded" Value="True" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>
        <Style BasedOn="{StaticResource DefaultComboBoxStyle}" TargetType="ComboBox">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
        <TeachingTip x:Name="ValidationResultTip" />
        <local:ValidationTriggerToNameConverter x:Key="ValidationTriggerToNameConverter" />
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Margin="24">
            <Expander>
                <Expander.DataContext>
                    <vm:TextBoxValidationViewModel x:Name="ViewModel" />
                </Expander.DataContext>
                <Expander.Header>
                    <StackPanel Margin="0,16" Spacing="8">
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                x:Name="PART_InputTextBox"
                                Grid.Column="0"
                                validation:TextBoxValidation.Validation="{x:Bind ViewModel.InputValidation}"
                                validation:TextBoxValidation.ValidationFailed="{x:Bind ValidationFailed}"
                                validation:TextBoxValidation.ValidationSucceed="{x:Bind ValidationSucceed}"
                                validation:TextBoxValidation.ValidationTrigger="{x:Bind ViewModel.Trigger, Mode=OneWay}"
                                Header="Please input &quot;true&quot;"
                                PlaceholderText="true"
                                Text="{x:Bind ViewModel.Input, Mode=TwoWay}" />
                            <Button
                                Grid.Column="1"
                                VerticalAlignment="Bottom"
                                Content="Make TextBox lost focus" />
                        </Grid>
                        <TextBlock x:Name="PART_ValidationResultTextBlock" />
                    </StackPanel>
                </Expander.Header>
                <StackPanel Spacing="16">
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox
                            Grid.Column="0"
                            MinWidth="200"
                            Header="ValidationTrigger"
                            ItemsSource="{x:Bind vm:TextBoxValidationViewModel.ValidationTriggers}"
                            SelectedIndex="0"
                            SelectedItem="{x:Bind ViewModel.Trigger, Mode=TwoWay}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="validation:ValidationTrigger">
                                    <TextBlock Text="{x:Bind Converter={StaticResource ValidationTriggerToNameConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button
                            Grid.Column="1"
                            VerticalAlignment="Bottom"
                            Click="OnValidateButtonClick"
                            Content="Validate" />
                    </Grid>
                </StackPanel>
            </Expander>
        </StackPanel>
    </ScrollViewer>

</Page>
