<?xml version="1.0" encoding="utf-8" ?>
<controls:ContentWindow
    x:Class="SuGarToolkit.WinUI3.GalleryApp.Views.SampleContentWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:SuGarToolkit.WinUI3.Controls.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SuGarToolkit.WinUI3.GalleryApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <controls:ContentWindow.SystemBackdrop>
        <MicaBackdrop />
    </controls:ContentWindow.SystemBackdrop>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Header="Title" Text="{x:Bind Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <CheckBox Content="CanMinimize" IsChecked="{x:Bind CanMinimize, Mode=TwoWay}" />
        <CheckBox Content="CanMaximize" IsChecked="{x:Bind CanMaximize, Mode=TwoWay}" />
        <CheckBox Content="CanResize" IsChecked="{x:Bind CanResize, Mode=TwoWay}" />
    </StackPanel>

</controls:ContentWindow>
