<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="SuGarToolkit.WinUI3.GalleryApp.Views.ContentDialogPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:SuGarToolkit.WinUI3.GalleryApp.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="using:SuGarToolkit.WinUI3.GalleryApp.ViewModels"
	mc:Ignorable="d">

	<Page.Resources>
		<Style TargetType="Expander">
			<Setter Property="ExpandDirection" Value="Down" />
			<Setter Property="IsExpanded" Value="False" />
			<Setter Property="HorizontalAlignment" Value="Stretch" />
			<Setter Property="HorizontalContentAlignment" Value="Left" />
		</Style>
	</Page.Resources>

	<ScrollViewer>
		<StackPanel Margin="24" Spacing="16">
			<Expander>
				<Expander.DataContext>
					<vm:ContentDialogInfo x:Name="WindowedContentDialogInfo" />
				</Expander.DataContext>
				<Expander.Header>
					<StackPanel Orientation="Horizontal" Spacing="12">
						<Button
							Click="OnShowWindowedContentDialogButtonClick"
							Content="WindowedContentDialog"
							Style="{ThemeResource AccentButtonStyle}" />
						<TextBlock VerticalAlignment="Center" Text="{x:Bind WindowedContentDialogInfo.Result, Mode=OneWay}" />
					</StackPanel>
				</Expander.Header>
				<StackPanel Spacing="12">
					<TextBox Header="Header" Text="{x:Bind WindowedContentDialogInfo.Header, Mode=TwoWay}" />
					<TextBox Header="PrimaryButtonContent" Text="{x:Bind WindowedContentDialogInfo.PrimaryButtonText, Mode=TwoWay}" />
					<TextBox Header="SecondaryButtonContent" Text="{x:Bind WindowedContentDialogInfo.SecondaryButtonText, Mode=TwoWay}" />
					<TextBox Header="CloseButtonContent" Text="{x:Bind WindowedContentDialogInfo.CloseButtonText, Mode=TwoWay}" />
					<ComboBox
						Header="ButtonOrientation"
						ItemsSource="{x:Bind vm:ContentDialogInfo.Orientations}"
						SelectedIndex="0"
						SelectedItem="{x:Bind WindowedContentDialogInfo.Orientation, Mode=TwoWay}" />
				</StackPanel>
			</Expander>

			<Expander>
				<Expander.DataContext>
					<vm:ContentDialogInfo x:Name="ContentDialogWindowInfo" />
				</Expander.DataContext>
				<Expander.Header>
					<StackPanel Orientation="Horizontal" Spacing="12">
						<Button
							Click="OnShowContentDialogWindowButtonClick"
							Content="ContentDialogWindow"
							Style="{ThemeResource AccentButtonStyle}" />
					</StackPanel>
				</Expander.Header>
				<StackPanel Spacing="12">
					<TextBox Header="PrimaryButtonContent" Text="{x:Bind ContentDialogWindowInfo.PrimaryButtonText, Mode=TwoWay}" />
					<TextBox Header="SecondaryButtonContent" Text="{x:Bind ContentDialogWindowInfo.SecondaryButtonText, Mode=TwoWay}" />
					<TextBox Header="CloseButtonContent" Text="{x:Bind ContentDialogWindowInfo.CloseButtonText, Mode=TwoWay}" />
					<ComboBox
						Header="ButtonOrientation"
						ItemsSource="{x:Bind vm:ContentDialogInfo.Orientations}"
						SelectedIndex="0"
						SelectedItem="{x:Bind ContentDialogWindowInfo.Orientation, Mode=TwoWay}" />
					<CheckBox Content="Is modal window" IsChecked="{x:Bind ContentDialogWindowInfo.IsModal, Mode=TwoWay}" />
					<CheckBox Content="Show in taskbar" IsChecked="{x:Bind ContentDialogWindowInfo.ShowInTaskbar, Mode=TwoWay}" />
				</StackPanel>
			</Expander>

			<Expander>
				<Expander.DataContext>
					<vm:ContentDialogInfo x:Name="ExtendedContentDialogWindowInfo" />
				</Expander.DataContext>
				<Expander.Header>
					<StackPanel Orientation="Horizontal" Spacing="12">
						<Button
							Click="OnShowExtendedContentDialogWindowButtonClick"
							Content="ExtendedContentDialogWindow"
							Style="{ThemeResource AccentButtonStyle}" />
					</StackPanel>
				</Expander.Header>
				<StackPanel Spacing="12">
					<TextBox Header="PrimaryButtonContent" Text="{x:Bind ExtendedContentDialogWindowInfo.PrimaryButtonText, Mode=TwoWay}" />
					<TextBox Header="SecondaryButtonContent" Text="{x:Bind ExtendedContentDialogWindowInfo.SecondaryButtonText, Mode=TwoWay}" />
					<TextBox Header="CloseButtonContent" Text="{x:Bind ExtendedContentDialogWindowInfo.CloseButtonText, Mode=TwoWay}" />
					<ComboBox
						Header="ButtonOrientation"
						ItemsSource="{x:Bind vm:ContentDialogInfo.Orientations}"
						SelectedIndex="0"
						SelectedItem="{x:Bind ExtendedContentDialogWindowInfo.Orientation, Mode=TwoWay}" />
					<CheckBox Content="Is modal window" IsChecked="{x:Bind ExtendedContentDialogWindowInfo.IsModal, Mode=TwoWay}" />
					<CheckBox Content="Show in taskbar" IsChecked="{x:Bind ExtendedContentDialogWindowInfo.ShowInTaskbar, Mode=TwoWay}" />
				</StackPanel>
			</Expander>

			<Expander>
				<Expander.Header>
					<StackPanel Orientation="Horizontal" Spacing="12">
						<Button
							Click="OnShowUacDialogWindowButtonClick"
							Content="UAC styled dialog"
							Style="{ThemeResource AccentButtonStyle}" />
					</StackPanel>
				</Expander.Header>
				<ComboBox
					x:Name="PART_SeverityComboBox"
					Header="Severity"
					SelectedIndex="0">
					<InfoBarSeverity>Informational</InfoBarSeverity>
					<InfoBarSeverity>Warning</InfoBarSeverity>
					<InfoBarSeverity>Error</InfoBarSeverity>
					<InfoBarSeverity>Success</InfoBarSeverity>
				</ComboBox>
			</Expander>
		</StackPanel>
	</ScrollViewer>

</Page>
